<UserControl x:Class="DubKing.Controls.SortingOptionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DubKing.Controls"
             mc:Ignorable="d" 
             x:Name="Root">
    <StackPanel>
        <TextBlock Text="Sort by:" FontSize="16"/>
        <RadioButton Content="Actor Name" GroupName="ActiveActorSort"/>
        <RadioButton Content="Estimated Time" GroupName="ActiveActorSort"/>
    </StackPanel>
</UserControl>
